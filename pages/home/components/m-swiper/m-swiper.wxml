<!--pages/home/components/m-swiper.wxml-->
<swiper class="swiper"
				circular
				autoplay
				interval="3000"
				duration="300"
				indicator-dots
				indicator-color="rgba(255, 255, 255 , .8)"
				indicator-active-color="#ff5777">
	<block wx:for="{{list}}" wx:key="index">
		<swiper-item class="sw-item">
			<image src="{{item.image}}" class="sw-img"></image>
		</swiper-item>
	</block>
</swiper>
