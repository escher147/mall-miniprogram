<!--components/m-tab-control/m-tab-control.wxml-->
<view class="tab-control">
	<block wx:for="{{list}}" wx:key="index">
		<view class="tab-item {{currentIndex === index ? 'active' : ''}}"
					bind:tap="itemTap"
					data-index="{{index}}">
				<text class="item-text">{{item}}</text>
		</view>
	</block>
</view>
