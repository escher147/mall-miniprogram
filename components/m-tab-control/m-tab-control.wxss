/* components/m-tab-control/m-tab-control.wxss */
	.tab-control {
		display: flex;
		padding-bottom: 16rpx;
		background-color: #fff;
	}

	.tab-item {
		flex: 1;
		text-align: center;
		height: 80rpx;
		line-height: 80rpx;
		font-size: 32rpx;
	}

	.active {
		color: #ff5777;
	}

	.active .item-text {
		padding: 16rpx 8rpx;
		border-bottom: 6rpx solid #ff5777;
	}